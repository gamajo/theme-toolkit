{
    "name": "gamajo/theme-toolkit",
    "type": "library",
    "description": "Building blocks for developing a config-based WordPress theme.",
    "keywords": [
        "WordPress",
        "wordpress-theme-development"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Gary Jones",
            "homepage": "https://gamajo.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Gamajo\\ThemeToolkit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamajo\\ThemeToolkit\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "brightnucleus/config": "^0.4",
        "roave/security-advisories": "dev-master",
        "brightnucleus/dependencies": "^0.3.1"
    },
    "require-dev": {
        "brain/monkey": "^2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.3",
        "object-calisthenics/phpcs-calisthenics-rules": "^3",
        "phpunit/phpunit": "^6.2",
        "squizlabs/php_codesniffer": "^3.0.2"
    },
    "config": {
        "sort-order": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
